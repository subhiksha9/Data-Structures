#include<stdlib.h>
#include<stdio.h>
#define max 5
int a[max],top=-1;
void push(int x)
{
    if(top==max-1)
    {
        printf("Stack overflown");
    }
    else
    {
        a[top++]=x;
        printf("%d pushed to stack\n", x);
    }
}
void pop()
{   
   if(top==-1)
    {
        printf("stack underflown");
        return -1;
    }
    else
    {
        return a[top--];
        printf("%d Element deleted",a[top--]);
    }
}
int peek()
{
    return a[top];
}
void display()
{
    int i;
    if(top==-1)
    {
        printf("The stack is empty\n");
    }
    else
    {
        for(i=top;i>=0;i--)
        {
            printf("\n%d",a[i]);
        }
    }
}
void main()
{
    int x,ch;
    while(1)
    {
        printf("Enter your choice\n1.Push\n2.Pop\n3.Peek\n4.Display\n5.Exit\n");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1: printf("Enter the element to be inserted\n");
                    scanf("%d",&x);
                    push(x);
                    break;
            case 2: pop();
                    break;
            case 3: x=peek();
                    printf("The top element of the stack is %d",x);
                    break;
            case 4: printf("The elements of the stack are: ");
                    display();
                    break;
            case 5: exit(0);
        }
    }
}
