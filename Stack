#include<stdio.h>
#define max 5
int a[max],top=-1;
void push(int x)
{
    if(top==max-1)
    {
        printf("Stack overflown");
    }
    else
    {
        a[top++]=x;
        printf("%d is inserted ",x);
    }
}
void pop()
{
    if(top==-1)
    {
        printf("Stack underflown");
        return -1;
    }
    else
    {
        printf("Element deleted=%d",a[top--]);
        return a[top--];
    }
}
int peek()
{
    return a[top];
}
void display()
{
    int i;
    if(top==-1)
    {
        printf("No element is found\n");
    }
    else
    {
        for(i=top;i>=0;i--)
        {
            printf("\n%d",a[i]);
        }
    }
}
void main()
{
    int x,choice;
    while(1)
    {
        printf("\n1.push\n2.pop\n3.peek\n4.display\n");
        printf("Enter your choice\n");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1: printf("Enter the element to insert");
                    scanf("%d",&x);
                    push(x);
                    break;
            /*case 2: pop();
                    break;
            case 3: x=peek();
                    printf("The element at the top of the stack is %d",x);
                    break;*/
            case 4: printf("The elements of the stack are : ");
                    display();
                    break;
            case 5: exit(0);
        }
    }
}
