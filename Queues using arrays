#include<stdio.h>
#define MAX 20
int queue[MAX];
int front=-1,rear=-1;
void enqueue(int k)
{  
    if (rear==MAX-1)
    {
        printf("queue overflow");
    }
    else
    {
     if (front==-1)
    {
        front=0;
    }
    else
    {
        rear=rear+1;
        printf("%d",queue[rear]);
    }
    }
}
int dequeue()
{
    int x;
    if (front==-1)
    {
        return -1;
    }
    else
    {
        if (front==rear)
        {
            front=-1;
            rear=-1;
        }
        else
        {
            x=queue[front];
            front=front+1;
            return x;
           
        }
    }
}
void display()
{
    int i;
    if (front==-1)
    {
        printf("no queue");
    }
    else
    {
        for (i=front;i<=rear;i++)
        {
            printf("%d",queue[i]);
        }
    }
}
void main()
{
    int ch,k;
    while(1)
    {
        printf("enter ch:");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:printf("enter k:");
                   scanf("%d",&k);
                   enqueue(k);
                   break;
            case 2:printf("%d",dequeue());
                   break;
            case 3:display();
                   break;
            case 4:exit(0);
        }
    }
}
